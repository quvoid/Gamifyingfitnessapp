{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true, // Added for interoperability
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // Allow emitting JavaScript files
    "outDir": "./dist" // Specify output directory for compiled files
  },
  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
  "include": ["vite.config.ts", "src/**/*.ts"] // Include all TypeScript files in src
}
